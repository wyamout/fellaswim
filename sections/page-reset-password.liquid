{%- assign form_type = blank -%}

<div class="two-panel account padded-page">

  <div class="container">
  
    <div class="account--reset-password">

      <h2 class="container--title">{{ 'customer.reset_password.title' | t }}</h2>

      {% form 'recover_customer_password', class: 'form form--login-register page--form no-ajax', id: 'recover_customer_password' %}

        <div class="form--errors hidden">
          {{ form.errors | default_errors }}
        </div>

        <fieldset>

          <div class="form--group">
            <div class="input-with-label">
              <label for="CustomerEmail">{{ 'customer.reset_password.email' | t }}<span class="required">*</span></label>

              <input type="email"
                 name="email"
                 id="CustomerEmail"
                 class="{% if form.errors contains 'email' %}input-error{% endif %}"
                 spellcheck="false"
                 autocomplete="off"
                 autocapitalize="off"
                 pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                 required >

            </div>
          </div>

          <button class="button button--black" type="submit" disabled>
            <span>{{ 'customer.reset_password.submit' | t }}</span>
          </button>

        </fieldset>

      {% endform %}


    </div>
  
  </div>

</div>
