<div class="table-size size-guide-table-wrapper">
  <table>
    <tbody>
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'row' %}
            <tr>
              <td class="highlighted">{{ block.settings.cmRow1 }}</td>
              <td>{{ block.settings.cmRow2 }}</td>
              <td>{{ block.settings.cmRow3 }}</td>
              <td>{{ block.settings.cmRow4 }}</td>
              <td>{{ block.settings.cmRow5 }}</td>
              <td>{{ block.settings.cmRow6 }}</td>
              <td>{{ block.settings.cmRow7 }}</td>
            </tr>
        {% endcase %}
      {% endfor %}
    </tbody>
  </table>
</div>

{% schema %}
{
  "name": "Table size",
  "settings": [
    {
        "type": "checkbox",
        "id": "switchSize",
        "label": "Switch CM/IN",
        "default": false
    },
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "checkbox",
          "id": "boldRow",
          "label": "Bold column",
          "default": false
        },
        {
          "type": "text",
          "id": "cmRow1",
          "label": "Row 1 CM",
          "default": "XS"
        },
        {
          "type": "text",
          "id": "inRow1",
          "label": "Row 1 IN",
          "default": "XS"
        },
        {
          "type": "text",
          "id": "cmRow2",
          "label": "Row 2 CM",
          "default": "S"
        },
        {
          "type": "text",
          "id": "inRow2",
          "label": "Row 2 IN",
          "default": "S"
        },
        {
          "type": "text",
          "id": "cmRow3",
          "label": "Row 3 CM",
          "default": "M"
        },
        {
          "type": "text",
          "id": "inRow3",
          "label": "Row 3 IN",
          "default": "M"
        },
        {
          "type": "text",
          "id": "cmRow4",
          "label": "Row 4 CM",
          "default": "L"
        },
        {
          "type": "text",
          "id": "inRow4",
          "label": "Row 4 IN",
          "default": "L"
        },
        {
          "type": "text",
          "id": "cmRow5",
          "label": "Row 5 CM",
          "default": "XL"
        },
        {
          "type": "text",
          "id": "inRow5",
          "label": "Row 5 IN",
          "default": "XL"
        },
        {
          "type": "text",
          "id": "cmRow6",
          "label": "Row 6 CM",
          "default": "10D"
        },
        {
          "type": "text",
          "id": "inRow6",
          "label": "Row 6 IN",
          "default": "10D"
        },
        {
          "type": "text",
          "id": "cmRow7",
          "label": "Row 7 CM",
          "default": "10DD"
        },
        {
          "type": "text",
          "id": "inRow7",
          "label": "Row 7 IN",
          "default": "10DD"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Table size"
    }
  ]
}
{% endschema %}
