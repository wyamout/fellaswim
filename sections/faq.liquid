<div class="multi-column-section faq-section">
  <div class="multi-column-section--title">{{ section.settings.section_title }}</div>
  <p class="multi-column-section-description" style="margin-bottom: 40px;">{{ section.settings.section_description }}</p>
  <div class="accordion-wrap ">
         {%- for block in section.blocks -%}

            <div class="accordion"> 

                <a href="#" class="accordion--title">
                    <span class="accordion--toggle">
                        {% render 'icon', icon: 'plus' %}
                        {% render 'icon', icon: 'minus' %}
                    </span>
                    <div class="accordion--title--wrapper">
                        {{ block.settings.title }}
                    </div>
                </a>
                
                <div class="accordion--description">
                    <div class="accordion--description--wrapper">
                        {{ block.settings.description | newline_to_br }}
                    </div>
                </div>

            </div>

        {%- endfor -%}
  </div>


    <!-- <div class="faq-wrap">
      <button class="faq-button">{{ section.settings.button_text }}</button>
  </div> -->
</div>

