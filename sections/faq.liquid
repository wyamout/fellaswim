{% schema %}
{
  "name": "FAQ",
  "settings": [

  {
        "type": "text",
        "id": "section_title",
        "label": "Section Title"
    },
    {
        "type": "richtext",
        "id": "section_description",
        "label": "Section Description"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "READ MORE"
    }
  ],
  "blocks": [
    {
        "type": "text",
        "name": "FAQs",
        "settings": [
            {
                "id": "title",
                "type": "text",
                "label": "Title"
            },
            {
                "id": "description",
                "type": "textarea",
                "label": "Description"
            }
        ]
    }
  ],
"presets": [{
    "name": "FAQ",
    "category": "Custom Content"
}]
}
{% endschema %}
