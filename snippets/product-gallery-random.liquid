{%- assign pair_lists = product.metafields.custom.pair_products -%}
{%- assign count = 0 -%}

{%- if pair_lists != blank -%}
  {%- for pair_gid in pair_lists -%}
    {%- assign pair_id = pair_gid | split: '/' | last -%}
    {%- assign pair_product = all_products[pair_id] -%}

    {%- if pair_product != blank -%}
      {% render 'product-gallery-item', product: pair_product %}
      {%- assign count = count | plus: 1 -%}
      {%- if count >= 4 -%}{%- break -%}{%- endif -%}
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

{%- paginate collection.products by 1000 -%}
  {%- assign max = collection.products | size -%}
  {%- assign random_number = 'now' | date: '%N' | modulo: max -%}

  {%- for i in (1..max) -%}
    {%- if count >= 4 -%}{%- break -%}{%- endif -%}

    {%- assign index = i | plus: random_number -%}
    {%- if index > max -%}
      {%- assign index = index | modulo: max | minus: 1 -%}
      {%- if index > random_number -%}
        {%- break -%}
      {%- endif -%}
    {%- endif -%}

    {%- assign product = collection.products[index] -%}
    {%- if title_filter == blank or product.title contains title_filter -%}
      {%- if product != blank -%}
        {% render 'product-gallery-item', product: product %}
        {%- assign count = count | plus: 1 -%}
      {%- endif -%}
    {%- endif -%}
  {%- endfor -%}
{%- endpaginate -%}
