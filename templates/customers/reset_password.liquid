{%- assign form_type = blank -%}

<div class="two-panel account padded-page">

    <div class="container">

        <div class="account--login">

            <h2 class="container--title">{{ 'customer.register.reset_password' | t }}</h2>

            {% form 'reset_customer_password', class: 'form form--login-register page--form no-ajax', id: 'reset_customer_password' %}

                <div class="form--errors hidden">
                    {{ form.errors | default_errors }}
                </div>

                <fieldset>

                    <div class="form--group">

                        <div class="input-with-label">
                            <label for="Password">{{ 'customer.register.password' | t }}<span class="required">*</span></label>

                            <input type="password"
                                name="customer[password]"
                                id="Password"
                                autocomplete="new-password"
                                required
                                />

                        </div>

                    </div>

                    <div class="form--group">

                        <div class="input-with-label">
                            <label for="Password">{{ 'customer.register.password_confirm' | t }}<span class="required">*</span></label>

                            <input type="password"
                                name="customer[password_confirmation]"
                                id="Password"
                                autocomplete="new-password"
                                required
                                />

                        </div>

                    </div>

                    <button class="button button--black" type="submit" disabled>
                        <span>{{ 'customer.register.submit_reset_password' | t }}</span>
                    </button>

                    <hr>

                    <div class="form--group">
                        <a class="form-link form-link--return" href="/account/login" id="Login">{% render 'icon', icon: 'chevron' %} {{ 'customer.register.cancel' | t }}</a>
                    </div>

                </fieldset>

            {% endform %}

        </div>

    </div>

</div>
