{%- assign form_type = blank -%}

<div class="two-panel account padded-page">

    <div class="container">

        <div class="account--login">

            <h2 class="container--title">{{ 'customer.activate.title' | t }}</h2>

            {% form 'activate_customer_password', class: 'form form--login-register page--form no-ajax', id: 'activate_customer_password' %}

                <div class="form--errors hidden">
                    {{ form.errors | default_errors }}
                </div>

				<input type="hidden" name="return_to" value="/account/" />

                <fieldset>

                    <div class="form--group">
                        <div class="input-with-label">
                            <label for="CreatePassword">{{ 'customer.activate.password' | t }}<span class="required">*</span></label>

                            <div class="input-password-wrapper">
                                <input type="password"
                                    name="customer[password]"
                                    id="CreatePassword"
                                    required
                                    class="{% if form.errors contains 'password' %}input-error{% endif %}" />
                                {% render 'icon', icon: 'eye' %}
                            </div>
                        </div>
                    </div>

                    <div class="form--group">
                        <div class="input-with-label">
                            <label for="CreatePasswordConfirmation">{{ 'customer.activate.password_confirm' | t }}<span class="required">*</span></label>

                            <div class="input-password-wrapper">
                                <input type="password"
                                name="customer[password_confirmation]"
                                id="CreatePasswordConfirmation"
                                required
                                class="{% if form.errors contains 'password' %}input-error{% endif %}" />
                                {% render 'icon', icon: 'eye' %}
                            </div>
                        </div>
                    </div>

                    <button class="button button--black" type="submit" disabled>
                        <span>{{ 'customer.activate.submit' | t }}</span>
                    </button>

                </fieldset>

            {% endform %}

        </div>

    </div>

</div>
